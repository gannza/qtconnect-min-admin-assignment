{
  "name": "QTConnect-admin-backend",
  "version": "1.0.0",
  "description": "Node.js backend with SOLID principles, validation, security, and monitoring",
  "main": "src/app.js",
  "scripts": {
    "start": "node src/app.js",
    "dev": "nodemon src/app.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "migrate": "knex migrate:latest",
    "migrate:rollback": "knex migrate:rollback",
    "seed": "knex seed:run",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "typecheck": "eslint src/ --ext .js --config .eslintrc.typecheck.js",
    "docs": "jsdoc -c .jsdocrc.json"
  },
  "engines": {
    "node": ">=14.18.0"
  },
  "overrides": {
    "glob": "^10.0.0",
    "rimraf": "^5.0.0",
    "inflight": "npm:@npmcli/promise-spawn@^7.0.0"
  },
  "dependencies": {
    "express": "^4.19.2",
    "objection": "^3.1.3",
    "knex": "^3.1.0",
    "sqlite3": "^5.1.7",
    "helmet": "^7.1.0",
    "express-rate-limit": "^7.4.1",
    "winston": "^3.13.0",
    "prom-client": "^15.1.0",
    "joi": "^17.13.3",
    "bcrypt": "^5.1.1",
    "protobufjs": "^7.4.0",
    "elliptic": "^6.5.4",
    "cors": "^2.8.5",
    "compression": "^1.7.4",
    "morgan": "^1.10.0",
    "dotenv": "^16.4.5",
    "express-async-errors": "^3.1.1"
  },
  "devDependencies": {
    "nodemon": "^3.1.7",
    "jest": "^29.7.0",
    "supertest": "^7.0.0",
    "eslint": "^8.57.1",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jsdoc": "^39.0.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.10",
    "jsdoc": "^4.0.0"
  },
  "lint-staged": {
    "src/**/*.js": [
      "eslint --fix",
      "npm run typecheck"
    ]
  },
  "keywords": [
    "nodejs",
    "express",
    "objection",
    "sqlite",
    "validation",
    "security",
    "monitoring",
    "protobuf",
    "crypto",
    "solid-principles"
  ],
  "author": "GANZA Jean Respice",
  "license": "MIT"
}